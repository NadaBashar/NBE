        <script type="text/javascript">
        var IDLE_TIMEOUT = 120; //seconds
var _idleSecondsTimer = null;
var _idleSecondsCounter = 0;

document.onclick = function() {
    _idleSecondsCounter = 0;
};

document.onmousemove = function() {
    _idleSecondsCounter = 0;
};

document.onkeypress = function() {
    _idleSecondsCounter = 0;
};

_idleSecondsTimer = window.setInterval(CheckIdleTime, 1000);

function CheckIdleTime() {
     _idleSecondsCounter++;
    if (_idleSecondsCounter >= IDLE_TIMEOUT) {
        window.clearInterval(_idleSecondsTimer);
        Bots.sendMessage('plugin help');
    }
}
    </script>
    
        <script>
var currentValue = 0;
function handleClick(myRadio) {
  //  alert('Old value: ' + currentValue);
//    alert('New value: ' + myRadio.value);
    if(myRadio.value == "textMessage"){
        setImageSrc('/stylesheets/CIB2.png');
        setFormVisible('textMessageForm',true);
        setFormVisible('cardMessageForm',false);
		document.getElementById('handImage').style.marginTop = "200px";
    }else{

        setImageSrc('/stylesheets/CIB1.png');
                setFormVisible('textMessageForm',false);
        setFormVisible('cardMessageForm',true);
		document.getElementById('handImage').style.marginTop = "300px";
    }
    currentValue = myRadio.value;
}
  function setImageSrc(source) {
    var img = document.getElementById('textMessage');
    img.src= source;
}
 function setFormVisible(id,visible) {
    var img = document.getElementById(id);
    
    img.style.visibility = (visible ? 'visible' : 'hidden');
}
</script>

